<%- include('layout/header') %>
<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if(message) { %>
        <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
          <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
          <strong><%= message.message %></strong>
        </div>
      <% } %>

      <div class="table-responsive">
        <% if(users && users.length > 0) { %>
          <table class="table table-striped text-center my-3">
            <thead>
              <tr class="table-dark">
                <th>Nome</th>
                <th>E-Mail</th>
                <th>CPF</th>
                <th>Ações</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach((user) => { %>
                <tr class="align-middle">
                  <td><%= user.nome ? user.nome : 'Nome não disponível' %></td>
                  <td><%= user.email ? user.email : 'Email não disponível' %></td>
                  <td><%= user.cpf ? user.cpf : 'CPF não disponível' %></td>
                  <td>
                    <a href="/edit/<%= user._id %>" class="text-success">
                      <i class="fas fa-edit fa-lg mx-1"></i>
                    </a>
                    <a href="/delete/<%= user._id %>" class="text-danger">
                      <i class="fas fa-trash fa-lg mx-1"></i>
                    </a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <h1 class="text-center text-secondary mt-5">Nenhum usuário encontrado no banco de dados!</h1>
        <% } %>
      </div>
    </div>
  </div>
</div>

 