<%- include('layout/footer') %>
  <div class="container">
    <div class="row">
      <div class="col-lg-6 mx-auto mt-4">
        <div class="card shadow">
          <div class="card-header bg-success">
            <h3 class="text-light">Edit User (<%= user.nome %> )</h3>
          </div>
          <div class="card-body p-4">
            <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
              <div class="mb-3">
                <label for="nome">nome</label>
                <input type="text" name="nome" value="<%= user.nome %> " class="form-control form-control-lg"
                  placeholder="Enter nome" required />
              </div>

              <div class="mb-3">
                <label for="email">Email</label>
                <input type="email" name="email" value="<%= user.email %> " class="form-control form-control-lg"
                  placeholder="Enter email" required />
              </div>

              <div class="mb-3">
                <label for="cpf">CPF</label>
                <input type="tel" name="cpf" value="<%= user.cpf %> " class="form-control form-control-lg"
                  placeholder="Enter Telefone" required />
              </div>

              <div class="mb-3 d-grid">
                <input type="submit" name="submit" value="Update User" class="btn btn-success btn-lg" />
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>